{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Name": {
      "type": "string"
    },
    "product_description": {
      "type": "richtext"
    },
    "brand_description": {
      "type": "richtext"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "decimal"
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "S",
        "M",
        "L",
        "XL"
      ]
    },
    "colour": {
      "type": "enumeration",
      "enum": [
        "Black",
        "White"
      ]
    },
    "brand_name": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Womens",
        "Mens",
        "Kids",
        "Accessories"
      ]
    },
    "featured": {
      "type": "boolean"
    },
    "sale": {
      "type": "boolean"
    }
  }
}
